<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/padding_small"
    android:paddingTop="@dimen/padding_small"
    android:paddingBottom="@dimen/padding_small"
    android:background="@drawable/item_file_background">

    <ImageView
        android:id="@+id/item_file_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/item_file_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/padding_small"
        android:layout_toRightOf="@id/item_file_icon"
        android:layout_toLeftOf="@id/item_file_delete"
        android:textColor="@color/textColorPrimary"
        android:textSize="@dimen/text_size_large" />

    <TextView
        android:id="@+id/item_file_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/item_file_icon"
        android:layout_below="@id/item_file_name"
        android:layout_marginLeft="@dimen/padding_small"
        android:layout_marginTop="2dp"
        android:textColor="@color/textColorSecondary"
        android:textSize="@dimen/text_size_small" />

    <ImageView
        android:id="@+id/item_file_delete"
        android:clickable="true"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="12dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_delete_file"/>

</RelativeLayout>
