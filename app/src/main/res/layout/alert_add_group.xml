<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:paddingTop="@dimen/padding_medium"
    android:paddingBottom="@dimen/padding_medium">

    <RelativeLayout
        android:id="@+id/alert_group_class"
        android:background="@drawable/layout_ripple_default"
        android:clickable="true"
        android:paddingLeft="@dimen/padding_medium"
        android:paddingRight="@dimen/padding_medium"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height">

        <TextView
            android:text="@string/alert_group_class"
            android:layout_centerVertical="true"
            android:textSize="@dimen/text_size_large"
            android:textColor="@color/textColorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/alert_group_choose_class"
            android:layout_centerVertical="true"
            android:textSize="@dimen/text_size_large"
            android:layout_toLeftOf="@+id/alert_group_img1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/alert_group_img1"
            android:src="@drawable/ic_layout_arrow"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/alert_group_group"
        android:background="@drawable/layout_ripple_default"
        android:clickable="true"
        android:paddingLeft="@dimen/padding_medium"
        android:paddingRight="@dimen/padding_medium"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height">

        <TextView
            android:text="@string/alert_group_group"
            android:layout_centerVertical="true"
            android:textSize="@dimen/text_size_large"
            android:textColor="@color/textColorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/alert_group_choose_group"
            android:layout_centerVertical="true"
            android:textSize="@dimen/text_size_large"
            android:layout_toLeftOf="@+id/alert_group_img2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/alert_group_img2"
            android:src="@drawable/ic_layout_arrow"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

</LinearLayout>
